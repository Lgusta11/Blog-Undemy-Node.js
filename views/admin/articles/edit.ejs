<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
  <hr>
  <div class="card">
    <div class="card-header">
      <h2>Editar Artigo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/update">
        <div class="form-group">
          <label for="title">Título do Artigo</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Defina um título para o artigo" value="<%= article.title %>">
        </div>
        <div class="form-group">
          <label for="body">Conteúdo do Artigo</label>
          <textarea class="form-control" id="body" name="body" placeholder="Escreva o artigo aqui"><%= article.body %></textarea>
        </div>
        <div class="form-group">
          <label for="category">Categoria</label>
          <select class="form-control" id="category" name="category">
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>" <% if (article.category === category.id) { %>selected<% } %>><%= category.title %></option>
            <% }) %>
          </select>
        </div>
        <input type="hidden" name="id" value="<%= article.id %>">
        <br>
        <button class="btn btn-success">Atualizar</button>
      </form>
    </div>
  </div>
</div>

<script src="/tinymce/tinymce.min.js"></script>
<script src="/tinymce/langs/pt_BR.js"></script>
<script>
  tinymce.init({
    language: 'pt_BR',
    selector: "#body",
    plugins: [
      "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons",
    ],
  });
</script>

